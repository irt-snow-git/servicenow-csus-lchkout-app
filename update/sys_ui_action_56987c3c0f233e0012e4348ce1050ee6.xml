<record_update sys_domain="global" table="sys_ui_action">
    <sys_ui_action action="INSERT_OR_UPDATE">
        <action_name>strike_invoice</action_name>
        <active>true</active>
        <client>false</client>
        <comments>Deactivates the current invoice record. Because invoices are associated with holds, it is desired that the hold also be moved to the 'Struck' state. Intended for use by technicians with the proper role when the application makes a duplicate invoice, or if the hold/invoice is deemed unnecessary.</comments>
        <condition>current.state=='1'</condition>
        <form_action>true</form_action>
        <form_button>true</form_button>
        <form_context_menu>false</form_context_menu>
        <form_link>false</form_link>
        <hint/>
        <list_action>false</list_action>
        <list_banner_button>false</list_banner_button>
        <list_button>false</list_button>
        <list_choice>false</list_choice>
        <list_context_menu>false</list_context_menu>
        <list_link>false</list_link>
        <list_save_with_form_button>false</list_save_with_form_button>
        <name>Strike Invoice</name>
        <onclick/>
        <order>100</order>
        <script><![CDATA[if(current.hold != ''){
	var otherINV = new GlideRecord('x_casus_laptop_invoice');
	otherINV.addActiveQuery();
	otherINV.addQuery('hold', current.hold);
	otherINV.addQuery('sys_id', '!=', current.sys_id);
	otherINV.query();
	
	if(!otherINV.hasNext()){
		var hold = new GlideRecord('x_casus_laptop_hold');
		hold.get(current.hold);
	
		if(hold.state == '1'){
			hold.state = '2';
			hold.active = false;
			hold.update();
		}
	}
}

current.state = '2';
current.active = 'false';
current.update();]]></script>
